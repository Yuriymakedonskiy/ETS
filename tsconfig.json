{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "DOM",
      "ES6",
      "DOM.Iterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,
    // "paths": {
    //   "*": ["./types/*"]
    // }
  },
  // "include": [
  //   "src"
  // ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "public"
  ]
}